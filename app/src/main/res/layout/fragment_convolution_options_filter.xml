<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.instaa.insta_a.view.ConvolutionOptionsFilter">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/GaussianFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtro gausiano"
            android:background="#399464"
            android:textAllCaps="false"
            android:clickable="true"
            android:onClick="gaussianFilter"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/OwnFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propio filtro"
            android:background="#399464"
            android:textAllCaps="false"
            android:clickable="true"
            android:onClick="ownFilter"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

</FrameLayout>
